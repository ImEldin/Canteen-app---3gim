<!DOCTYPE html>
<html lang="bs">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create User</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/stylesheets/admin/createUser.css">
    <link rel="stylesheet" href="/stylesheets/loadingSpinner.css">
    <link rel="stylesheet" href="/stylesheets/admin/adminTopBar.css">
    <link rel="stylesheet" href="/stylesheets/admin/adminBody.css">
</head>
<body>
<div class="loading-overlay" id="loading-overlay">
    <div class="spinner"></div>
</div>

<div id="bg-fixed"></div>

<div class="top-bar">
    <div class="admin-info">
        <div class="admin-avatar"><%= user.username.charAt(0).toUpperCase() %></div>
        <span class="admin-name"><%= user.username %></span>
    </div>
    <div class="nav-actions">
        <a href="/admin" class="back-btn">Admin panel</a>
        <a href="/auth/logout" class="logout-btn">Odjavi se</a>
    </div>
</div>

<div class="content-wrapper">
    <div class="form-container">
        <div class="form-card">
            <h1 class="form-title">Kreiraj novog korisnika</h1>

            <% if (typeof error !== 'undefined' && error) { %>
                <div class="alert alert-danger alert-dismissible fade show alert-custom mt-3" role="alert">
                    <strong>Greška!</strong> <%= error %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Zatvori"></button>
                </div>
            <% } %>

            <% if (typeof success !== 'undefined' && success) { %>
                <div class="alert alert-success alert-dismissible fade show mt-3 custom-success" role="alert">
                    <div class="alert-content">
                        <strong>Korisnik uspješno kreiran!</strong>
                        <p class="temp-pass">
                            Privremena lozinka: <b><%= tempPassword %></b>
                        </p>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Zatvori"></button>
                </div>
            <% } %>

            <form action="/admin/create-user" method="POST">
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" name="email" class="form-control" required>
                </div>

                <div class="form-row">
                    <div class="mb-3">
                        <label class="form-label">Korisničko ime</label>
                        <input type="text" name="username" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Broj telefona</label>
                        <input type="text" name="phone_number" class="form-control" required>
                    </div>
                </div>

                <div class="mb-3 role-field">
                    <label class="form-label">Uloga</label>
                    <div class="custom-select-wrapper">
                        <div class="custom-select" id="roleSelect">
                            <span class="selected-text">Učenik</span>
                            <i class="bi bi-chevron-down"></i>
                        </div>
                        <div class="custom-options" id="roleOptions">
                            <div class="custom-option selected" data-value="ucenik">Učenik</div>
                            <div class="custom-option" data-value="kantina">Kantina</div>
                            <div class="custom-option" data-value="profesor">Profesor</div>
                        </div>
                        <input type="hidden" name="role" id="roleInput" value="ucenik" required>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-person-add"></i> Kreiraj korisnika
                </button>
            </form>

            <div class="action-links">
                <a href="/admin/export-temp-passwords" class="btn btn-secondary">
                    <i class="bi bi-download"></i> Preuzmi privremene lozinke
                </a>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script type="text/javascript" src="/javascripts/admin/createUser.js"></script>
<script>
    window.addEventListener('load', function() {
        document.getElementById('loading-overlay').classList.add('hidden');
    });
</script>
</body>
</html>
