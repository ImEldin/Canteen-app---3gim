<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Login</title>
</head>
<body>
<h1>Login</h1>

<% if (typeof error !== 'undefined' && error) { %>
    <p style="color: red;"><%= error %></p>
<% } %>

<form action="/auth/login" method="POST">
    <label>
        Email
        <input type="email" name="email" required />
    </label>
    <br /><br />

    <label>
        Password
        <input type="password" name="password" required />
    </label>
    <br /><br />

    <button type="submit">Login</button>
</form>
</body>
</html>
