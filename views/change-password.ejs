<!DOCTYPE html>
<html lang="bs">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Promjena lozinke - Kantina</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/stylesheets/user/userBody.css">
    <link rel="stylesheet" href="/stylesheets/changePassword.css">
</head>
<body>
<div id="bg-fixed"></div>

<div class="auth-container">
    <div class="auth-card">
        <h1 class="auth-title">Promjena lozinke</h1>

        <% if (typeof error !== 'undefined' && error) { %>
            <div class="error-message">
                <span><strong>Gre≈°ka!</strong> <%= error %></span>
                <button type="button" class="close-btn" onclick="this.parentElement.style.display='none'">&times;</button>
            </div>
        <% } %>

        <form action="/auth/change-password" method="POST" class="auth-form">
            <div class="form-group">
                <label for="oldPassword">Trenutna lozinka</label>
                <div class="password-wrapper">
                    <input type="password" id="oldPassword" name="oldPassword" required>
                    <i class="bi bi-eye" id="toggleOldPassword" onclick="togglePassword('oldPassword', 'toggleOldPassword')"></i>
                </div>
            </div>

            <div class="form-group">
                <label for="newPassword">Nova lozinka</label>
                <div class="password-wrapper">
                    <input type="password" id="newPassword" name="newPassword" required>
                    <i class="bi bi-eye" id="toggleNewPassword" onclick="togglePassword('newPassword', 'toggleNewPassword')"></i>
                </div>
            </div>

            <div class="form-group">
                <label for="newPasswordConfirm">Potvrdi novu lozinku</label>
                <div class="password-wrapper">
                    <input type="password" id="newPasswordConfirm" name="newPasswordConfirm" required>
                    <i class="bi bi-eye" id="toggleNewPasswordConfirm" onclick="togglePassword('newPasswordConfirm', 'toggleNewPasswordConfirm')"></i>
                </div>
            </div>

            <button type="submit" class="btn-submit">Promijeni lozinku</button>
        </form>

        <div class="auth-footer">
            <a href="/auth/logout" class="logout-btn">Odjavi se</a>
        </div>
    </div>
</div>

<script>
    function togglePassword(inputId, iconId) {
        const input = document.getElementById(inputId);
        const icon = document.getElementById(iconId);

        if (input.type === "password") {
            input.type = "text";
            icon.classList.replace("bi-eye", "bi-eye-slash");
        } else {
            input.type = "password";
            icon.classList.replace("bi-eye-slash", "bi-eye");
        }
    }
</script>
</body>
</html>
